@model PhygitalTool.Domain.Platform.BackOffice

@{
    ViewBag.Title = "title";
 
}

<body class="animated-background">

<div class="container-fluid">
    <div class="row">
        
        <!-- Sidebar -->
        <div class="col-md-3 sidebar">
            <!-- User Info -->
            <div class="text-center mt-4">
                @foreach (var manager in Model.Managers)
                {
                    if (manager.UserName == User.Identity?.Name)
                    {
                        <img src="@manager.ImageUrl" alt="Profile Picture" class="rounded-circle img-fluid">
                        <h5>@manager.UserName</h5>
                        <p>mycompany</p>
                    }
                }
            </div>

            <div class="nav flex-column">
                <a href="#" onclick="window.location.reload(true);" class="nav-link active">Projecten <span class="badge badge-primary ">@Model.Projects.Count</span></a>
                <a class="nav-link" asp-area="" asp-controller="Results" asp-action="Index">Results</a>
                <a href="#" class="nav-link">Begeleiders</a>
                <a href="#" class="nav-link">Instellingen</a>
                <a href="/Identity/Account/Logout" class="nav-link">Logout</a>
            </div>
        </div>

        <!-- Projects -->
        <div class="col-md-9" id="projects-container">
            <h2 class="mt-4">Projecten</h2>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="toggle-show-projects">
                <label class="form-check-label" for="toggle-show-projects">Toon enkel actieve projecten</label>
            </div>

            <div class="row">
                @foreach (var project in Model.Projects)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                         <div class="card clickable" data-project-id="@project.ProjectId" data-href="@Url.Action("Index", "Projects", new { projectId = project.ProjectId })">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title">@project.ProjectName</h5>
                                    <div>
                                        <button class="btn btn-outline-secondary edit-project-button btn-sm" data-project-id="@project.ProjectId" title="Edit Project">
                                            <i class="bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-outline-danger remove-project-button btn-sm" data-bs-toggle="modal" data-bs-target="#confirmationModal" data-project-id="@project.ProjectId" title="Delete Project">
                                            <i class="bi-trash"></i>
                                        </button>
                                        <button type="button" class="card clickable btn results-btn" data-flow-id="@project.ProjectId" data-href="@Url.Action("Index", "Results",new {projectId = project.ProjectId} )">Results</button>
                                    </div>
                                </div>
                                <p class="card-text">@project.Description</p>
                                <div class="mt-auto">
                                    <div class="d-flex align-items-center">
                                        <span class="badge  project-status">@project.Status</span>
                                    </div>
                                </div>
                                <span class="badge creationDate">@project.CreationDate.Day/@project.CreationDate.Month/@project.CreationDate.Year  @project.CreationDate.Hour:@project.CreationDate.Minute</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        

        <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this project?
                    </div>
                    <div class="modal-footer">
                        <form id="deleteForm" action="" method="post">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            <button id="delete-confirm" type="submit" class="btn btn-danger">Yes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <button type="button" id="add-project-button">+</button>


    </div>
</div>

@section Scripts {
    <script id="project-script" src="~/dist/projectCreation.entry.js" defer="defer" data-backoffice-id="@Model.BackOfficeId"></script>
    <script id="active-projects-script" src="~/dist/activeProjects.entry.js" defer="defer"></script>
    <script id="supervisor-script" src="~/dist/superVisors.entry.js" data-backoffice-id="@Model.BackOfficeId" defer="defer"></script>
}

</body>